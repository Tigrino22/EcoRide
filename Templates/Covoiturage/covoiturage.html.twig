{% extends '@__main__/base.html.twig' %}

{% block body %}

    <section class="flex items-center flex-1">
        <div class="flex flex-col w-full gap-6">
            <h1 class="text-5xl font-extrabold text-center lg:text-7xl 2xl:text-8xl">
                <span class="text-transparent bg-gradient-to-br bg-clip-text from-teal-500 via-teal-500 to-sky-500 dark:from-teal-200 dark:via-teal-300 dark:to-sky-500">
                    Covoiturage
                </span>
            </h1>

            {% if not search %}
                {#
                    Quand aucune recherche n'a encore été lancée.
                #}

                <h2 class="max-w-3xl text-3xl lg:text-4xl mx-auto mt-6 text-center text-gray-700 dark:text-white">Recherchez un trajet :</h2>

                <div class="flex-col flex my-8 mx-6 md:flex-row md:justify-center space-y-2 md:space-y-0 md:space-x-2">
                    <input id="start" type="text"
                           class="w-full lg:w-auto px-6 py-3 text-gray-700 bg-white border rounded-md
                        dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600
                        focus:border-teal-400 focus:ring-teal-300 focus:ring-opacity-40 dark:focus:border-300 focus:outline-none focus:ring" placeholder="Départ" />
                    <input id="from" type="text"
                           class="w-full lg:w-auto px-6 py-3 text-gray-700 bg-white border rounded-md
                        dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600
                        focus:border-teal-400 focus:ring-teal-300 focus:ring-opacity-40 dark:focus:border-300 focus:outline-none focus:ring" placeholder="Destination" />
                    <input id="date" type="date"
                           class="w-full lg:w-auto px-6 py-3 text-gray-700 bg-white border rounded-md
                        dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600
                        focus:border-teal-400 focus:ring-teal-300 focus:ring-opacity-40 dark:focus:border-300 focus:outline-none focus:ring" />

                    <button class="inline-flex justify-center items-center gap-2 px-6 py-2 text-md font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-teal-500 rounded-md hover:bg-teal-600 focus:bg-teal-600 focus:outline-none sm:mx-2">
                    En route<svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                    </svg>
                    </button>
                </div>

            {% else %}
                {#
                    Si une recherche de covoiturage est lancée, $search passe a true et
                    le listing est affiché
                #}

                <h2 class="max-w-3xl text-3xl lg:text-4xl mx-auto mt-6 text-center text-gray-700 dark:text-white">Voici les trajets trouvés :</h2>

                {% include '@Covoiturage/liste_covoiturage.html.twig' %}

            {% endif %}
        </div>
    </section>


{% endblock %}